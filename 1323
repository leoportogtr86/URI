
package uri1323;

import java.util.Scanner;


public class Uri1323 {

  
    public static void main(String[] args) {
        
        Scanner sc = new Scanner (System.in);
        
        int n, i, soma = 0;
        
        System.out.println("Digite a medida do lado do quadrado:");
        n = sc.nextInt();
        
        for (i = n; i > 0; i--){
        
        
           soma += i*i;
        
        
        }
        
        System.out.println(soma);
        
        
        
    }
    
}
