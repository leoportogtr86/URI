    private void botaoActionPerformed(java.awt.event.ActionEvent evt) {                                      
        
        
        
        
        
        float salario, imposto;
        
        salario = Float.parseFloat(jText1.getText());
        
        if (salario >= 0 && salario <= 2000){
        
           imposto = 0;
           jText2.setText(Float.toString(imposto));          
        
        } else if (salario >= 2000.01 && salario <= 3000){
        
           //exemplo: 2500
           
           imposto = (salario - 2000)*0.08f;
           
           jText2.setText(Float.toString(imposto));  
        
        } else if (salario >= 3000.01 && salario <= 4500){
        
           //exemplo: 3500 = 2000 + 1000 + 500
           
           imposto = (salario - 3000)*0.18f + (1000)*0.08f;
           jText2.setText(Float.toString(imposto));            
        
        } else if (salario > 4500){
        
            
            //5000 = 2000 + 1500 + 1000 + 500
           //exemplo: (5000 - 4500)*0.18  (5000 - 4500)
           
           
           imposto = (salario - 4500)*0.28f + 1000*0.08f + 1500*0.18f ;
           
           jText2.setText(Float.toString(imposto));            
        
        }          
        
    }                                     

